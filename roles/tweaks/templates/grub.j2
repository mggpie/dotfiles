# =============================================================================
# GRUB Configuration
# Generated by Ansible - Do not edit manually
# =============================================================================

# Boot menu timeout (0 = no menu visible)
GRUB_TIMEOUT=0
GRUB_TIMEOUT_STYLE=hidden

GRUB_DISTRIBUTOR="Void"

# Default kernel parameters (quiet boot)
GRUB_CMDLINE_LINUX_DEFAULT="{{ grub_cmdline_default }}"

# Kernel parameters for encrypted root + performance tweaks
GRUB_CMDLINE_LINUX="{{ grub_cmdline_linux }}"

# Enable LUKS encryption support
GRUB_ENABLE_CRYPTODISK=y

# Disable recovery menu
GRUB_DISABLE_RECOVERY=true

# Graphics mode
GRUB_GFXMODE=auto
GRUB_GFXPAYLOAD_LINUX=keep

# Disable OS prober (single boot system)
GRUB_DISABLE_OS_PROBER=true
