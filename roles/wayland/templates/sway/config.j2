# =============================================================================
# Sway Configuration
# Generated by Ansible - Do not edit manually
# =============================================================================

# Modifier key (Super/Windows)
set $mod Mod4

# Applications
set $term {{ terminal }}
set $menu bemenu-run -p "run:" --fn "{{ fonts['mono'] }} {{ fonts['size']['ui'] }}" -H 24 --tb "#{{ colors['background'] }}" --tf "#{{ colors['foreground'] }}" --fb "#{{ colors['background'] }}" --ff "#{{ colors['foreground'] }}" --nb "#{{ colors['background'] }}" --nf "#{{ colors['foreground'] }}" --hb "#{{ colors['blue'] }}" --hf "#{{ colors['background'] }}"

# =============================================================================
# Output Configuration
# =============================================================================

# Default wallpaper (solid color)
output * bg #{{ colors['background'] }} solid_color

# VirtualBox display
output Virtual-1 resolution 1920x1080 position 0,0

# =============================================================================
# Input Configuration
# =============================================================================

input type:keyboard {
    xkb_layout {{ keymap }}
    xkb_options caps:escape
    repeat_delay 300
    repeat_rate 50
}

input type:pointer {
    accel_profile flat
}

input type:touchpad {
    dwt enabled
    tap enabled
    natural_scroll enabled
    middle_emulation enabled
}

# =============================================================================
# Appearance
# =============================================================================

# Font
font pango:{{ fonts['sans'] }} {{ fonts['size']['ui'] }}

# Window borders
default_border pixel {{ theme.border_width }}
default_floating_border pixel {{ theme.border_width }}
smart_borders on
smart_gaps on

# Gaps
gaps inner 4
gaps outer 2

# Colors                    border                   background               text                     indicator                child_border
client.focused              #{{ theme.border_focused }}  #{{ theme.border_focused }}  #{{ colors['foreground'] }}  #{{ colors['magenta'] }}  #{{ theme.border_focused }}
client.focused_inactive     #{{ theme.border_unfocused }} #{{ theme.border_unfocused }} #{{ colors['foreground'] }}  #{{ colors['magenta'] }}  #{{ theme.border_unfocused }}
client.unfocused            #{{ theme.border_unfocused }} #{{ theme.border_unfocused }} #{{ colors['bright_black'] }} #{{ colors['magenta'] }}  #{{ theme.border_unfocused }}
client.urgent               #{{ colors['red'] }}         #{{ colors['red'] }}         #{{ colors['foreground'] }}  #{{ colors['red'] }}      #{{ colors['red'] }}

# =============================================================================
# Key Bindings - Applications
# =============================================================================

# Terminal
bindsym $mod+Shift+Return exec $term

# Application launcher
bindsym $mod+d exec $menu

# File manager
bindsym $mod+e exec $term -e lf

# Browser
bindsym $mod+b exec {{ browser }}

# Close focused window
bindsym $mod+Shift+q kill

# Lock screen
bindsym $mod+Shift+x exec swaylock -f

# Reload configuration
bindsym $mod+Shift+c reload

# Exit sway
bindsym $mod+Shift+e exec swaynag -t warning -m 'Exit Sway?' -B 'Yes' 'swaymsg exit'

# =============================================================================
# Key Bindings - Navigation (Vim-like: I/K up/down, J/L left/right)
# =============================================================================

# Change focus
bindsym $mod+j focus left
bindsym $mod+k focus down
bindsym $mod+i focus up
bindsym $mod+l focus right

# Arrow keys
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Move focused window
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move down
bindsym $mod+Shift+i move up
bindsym $mod+Shift+l move right

# Arrow keys
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# =============================================================================
# Key Bindings - Workspaces
# =============================================================================

# Define workspace names
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"

# Switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9

# Move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9

# =============================================================================
# Key Bindings - Layout
# =============================================================================

# Split orientation
bindsym $mod+h splith
bindsym $mod+v splitv

# Layout modes
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+t layout toggle split

# Toggle fullscreen
bindsym $mod+f fullscreen toggle

# Toggle floating
bindsym $mod+space floating toggle

# Focus floating/tiled
bindsym $mod+Shift+space focus mode_toggle

# Focus parent container
bindsym $mod+a focus parent

# =============================================================================
# Key Bindings - Resize Mode
# =============================================================================

mode "resize" {
    bindsym j resize shrink width 10px
    bindsym k resize grow height 10px
    bindsym i resize shrink height 10px
    bindsym l resize grow width 10px

    bindsym Left resize shrink width 10px
    bindsym Down resize grow height 10px
    bindsym Up resize shrink height 10px
    bindsym Right resize grow width 10px

    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# =============================================================================
# Key Bindings - Media Keys
# =============================================================================

# Volume
bindsym XF86AudioRaiseVolume exec pamixer -i 5
bindsym XF86AudioLowerVolume exec pamixer -d 5
bindsym XF86AudioMute exec pamixer --toggle-mute

# Media playback
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioNext exec playerctl next

# Brightness
bindsym XF86MonBrightnessUp exec light -A 5
bindsym XF86MonBrightnessDown exec light -U 5

# =============================================================================
# Key Bindings - Screenshots
# =============================================================================

# Area screenshot
bindsym Print exec screenshot.sh area

# Full screen screenshot  
bindsym Shift+Print exec screenshot.sh full

# =============================================================================
# Window Rules
# =============================================================================

# Floating windows
for_window [app_id="imv"] floating enable
for_window [app_id="pavucontrol"] floating enable
for_window [app_id="blueman-manager"] floating enable
for_window [app_id="nm-connection-editor"] floating enable
for_window [title="About"] floating enable
for_window [title="Preferences"] floating enable
for_window [window_role="pop-up"] floating enable
for_window [window_role="dialog"] floating enable

# Firefox PiP
for_window [app_id="firefox" title="Picture-in-Picture"] floating enable, sticky enable

# =============================================================================
# Autostart
# =============================================================================

# Status bar
bar {
    swaybar_command waybar
}

# Output manager (for multi-monitor)
exec kanshi

# Idle management
exec swayidle -w \
    timeout 300 'swaylock -f' \
    timeout 600 'swaymsg "output * dpms off"' resume 'swaymsg "output * dpms on"' \
    before-sleep 'swaylock -f'

# Clipboard manager
exec wl-paste --watch cliphist store

# Notification daemon
exec mako

# XDG portal
exec /usr/libexec/xdg-desktop-portal-wlr

# Include additional configs if present
include /etc/sway/config.d/*
