/* =============================================================================
 * Waybar Styles - Catppuccin Mocha
 * ============================================================================= */

@define-color bg {{ colors['background'] }};
@define-color fg {{ colors['foreground'] }};
@define-color surface0 {{ colors['bright_black'] }};
@define-color surface1 {{ colors['bright_black'] }};
@define-color blue {{ colors['blue'] }};
@define-color green {{ colors['green'] }};
@define-color red {{ colors['red'] }};
@define-color yellow {{ colors['yellow'] }};
@define-color mauve {{ colors['magenta'] }};
@define-color teal {{ colors['cyan'] }};
@define-color peach {{ colors['yellow'] }};
@define-color overlay0 {{ colors['bright_black'] }};

* {
    font-family: "Intel One Mono", "Symbols Nerd Font", monospace;
    font-size: 12px;
    min-height: 0;
    border: none;
    border-radius: 0;
}

window#waybar {
    background-color: @bg;
    color: @fg;
}

window#waybar.hidden {
    opacity: 0.2;
}

tooltip {
    background: @surface0;
    border: 1px solid @surface1;
    border-radius: 8px;
}

tooltip label {
    color: @fg;
}

#tags button {
    padding: 0 8px;
    background: transparent;
    color: @overlay0;
    border: none;
}

#tags button:hover {
    background: @surface0;
    color: @fg;
}

#tags button.focused {
    background: @blue;
    color: @bg;
}

#tags button.occupied {
    color: @fg;
}

#tags button.urgent {
    background: @red;
    color: @bg;
}

#window {
    padding: 0 10px;
    color: @fg;
}

#clock {
    padding: 0 10px;
    color: @mauve;
    font-weight: bold;
}

#cpu {
    padding: 0 10px;
    color: @teal;
}

#memory {
    padding: 0 10px;
    color: @peach;
}

#battery {
    padding: 0 10px;
    color: @green;
}

#battery.charging {
    color: @green;
}

#battery.warning:not(.charging) {
    color: @yellow;
}

#battery.critical:not(.charging) {
    color: @red;
    animation: blink 0.5s linear infinite alternate;
}

@keyframes blink {
    to {
        background-color: @red;
        color: @bg;
    }
}

#network {
    padding: 0 10px;
    color: @blue;
}

#network.disconnected {
    color: @red;
}

#pulseaudio {
    padding: 0 10px;
    color: @yellow;
}

#pulseaudio.muted {
    color: @overlay0;
}

#tray {
    padding: 0 10px;
}

#tray > .passive {
    -gtk-icon-effect: dim;
}

#tray > .needs-attention {
    -gtk-icon-effect: highlight;
    background-color: @red;
}
