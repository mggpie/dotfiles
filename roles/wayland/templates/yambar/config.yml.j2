# =============================================================================
# Yambar Status Bar Configuration
# Generated by Ansible - Do not edit manually
# =============================================================================

bar:
  location: top
  height: 20
  background: {{ colors.background }}ff
  foreground: {{ colors.foreground }}ff
  font: {{ fonts.mono }}:size={{ fonts.size.small }}

  left:
    - river:
        anchors:
          - base: &river_base
              margin: 20
              text: "{id}"
              on-click: sh -c "riverctl set-focused-tags $((1 << ({id} - 1)))"

        content:
          map:
            tag: state
            values:
              focused:
                string:
                  <<: *river_base
                  deco:
                    stack:
                      - background:
                          color: {{ colors.blue }}ff
              unfocused:
                string:
                  <<: *river_base
              invisible:
                map:
                  tag: occupied
                  values:
                    true:
                      string:
                        <<: *river_base
                    false:
                      map:
                        tag: id
                        default:
                          empty: {}
                        values:
                          1:
                            string:
                              <<: *river_base

  center:
    - clock:
        content:
          string:
            text: "{time}"
            margin: 10

  right:
    - network:
        name: enp3s0
        content:
          map:
            tag: state
            values:
              down:
                string:
                  text: "󰖪 down"
                  foreground: {{ colors.red }}ff
              up:
                string:
                  text: "󰈀 {ipv4}"
                  foreground: {{ colors.green }}ff

    - pipewire:
        content:
          map:
            conditions:
              muted:
                string:
                  text: "󰝟 muted"
                  foreground: {{ colors.red }}ff
            default:
              string:
                text: "󰕾 {cubic_volume}%"

    - battery:
        name: BAT0
        poll-interval: 30000
        content:
          map:
            conditions:
              state == discharging:
                - ramp:
                    tag: capacity
                    items:
                      - string:
                          text: "󰁺 {capacity}%"
                          foreground: {{ colors.red }}ff
                      - string:
                          text: "󰁻 {capacity}%"
                          foreground: {{ colors.yellow }}ff
                      - string:
                          text: "󰁼 {capacity}%"
                      - string:
                          text: "󰁽 {capacity}%"
                      - string:
                          text: "󰁾 {capacity}%"
                      - string:
                          text: "󰁿 {capacity}%"
                      - string:
                          text: "󰂀 {capacity}%"
                      - string:
                          text: "󰂁 {capacity}%"
                      - string:
                          text: "󰂂 {capacity}%"
                      - string:
                          text: "󰁹 {capacity}%"
              state == charging:
                string:
                  text: "󰂄 {capacity}%"
                  foreground: {{ colors.green }}ff
            default:
              string:
                text: "󰁹 {capacity}%"
      when: false  # Disable for desktop

    - clock:
        date-format: "%a %Y-%m-%d"
        content:
          string:
            text: "{date} {time}"
            margin: 10
