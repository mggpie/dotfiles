# =============================================================================
# Kanshi Output Configuration
# Generated by Ansible - Do not edit manually
# =============================================================================
# Kanshi automatically switches profiles based on connected displays

# Profile: PC Monitor (primary workspace)
profile pc {
    output "{{ monitors.primary.vendor }} {{ monitors.primary.product }}" {
        enable
        mode {{ monitors.primary.resolution }}@{{ monitors.primary.refresh }}Hz
        position 0,0
        scale {{ monitors.primary.scale }}
    }
    output "{{ monitors.secondary.vendor }} {{ monitors.secondary.product }}" disable
}

# Profile: TV (media/gaming)
profile tv {
    output "{{ monitors.secondary.vendor }} {{ monitors.secondary.product }}" {
        enable
        mode {{ monitors.secondary.resolution }}@{{ monitors.secondary.refresh }}Hz
        position 0,0
        scale {{ monitors.secondary.scale }}
    }
    output "{{ monitors.primary.vendor }} {{ monitors.primary.product }}" disable
}

# Fallback: Enable any connected display
profile fallback {
    output "*" enable
}
