# imv config
# https://sr.ht/~exec64/imv/

[options]
# Suppress built-in key bindings, and specify them explicitly
suppress_default_binds = true

# Start fullscreen
fullscreen = false

# Loop through images
loop_input = true

# Default background color
background = 1d2021

# Upscale images smaller than the window
upscaling_method = linear

[aliases]

[binds]
# Quit
q = quit

# Image navigation
<Left> = prev
<Right> = next
<bracketleft> = prev
<bracketright> = next
gg = goto 1
<Shift+G> = goto -1
j = prev
k = next

# Panning
<Shift+J> = pan 0 -50
<Shift+K> = pan 0 50
<Shift+H> = pan 50 0
<Shift+L> = pan -50 0

# Zooming
<Up> = zoom 1
<Down> = zoom -1
<Shift+plus> = zoom 1
<minus> = zoom -1
i = zoom 1
o = zoom -1

# Rotate Clockwise by 90 degrees
<Ctrl+r> = rotate by 90

# Other commands
x = close
f = fullscreen
d = overlay
p = exec echo $imv_current_file
c = center
s = scaling next
<Shift+S> = upscaling next
a = zoom actual
r = reset

# Gif playback
<period> = next_frame
<space> = toggle_playing

# Slideshow control
t = slideshow +1
<Shift+T> = slideshow -1
